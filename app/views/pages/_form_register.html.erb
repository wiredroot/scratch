	            <div id="registerform" class="col-sm-6">
	                  <h2>Registration Form</h2>
                    <form name="registerapp" class="form-horizontal" role="form" ACTION="./cgi-bin/jiggle.pl" METHOD="POST">
						            <input type=hidden name="redirect" value="http://www.wiredroot.com/success.php">
                        <input type=hidden name="recipient" value="sales@wiredroot.com, wiredroot@gmail.com">
                        <input type=hidden name="subject" value="URGENT : Contact Request">
                        <input type=hidden name="required" value="firstname,lastname,email,password,password_confirm"> 

                        <div class="form-group">
                            <label class="control-label col-sm-3" for="firstname">First Name:</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control required" name="firstname" id="firstname" placeholder="Enter your first name">
  						                  <div id="errorContact1" style="display: none; color: red;">Invalid: type your full first name.</div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-3" for="lastname">Last Name:</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control required" name="lastname" id="latname" placeholder="Enter your last name">
  						                  <div id="errorContact3" style="display: none; color: red;">Invalid: type your full first name.</div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-3" for="email">Email:</label>
                            <div class="col-sm-9">
                                <input type="email" class="form-control required" name="email" id="email" placeholder="Enter your email address">
									              <div id="errorContact2" style="display: none; color: red;">Invalid: must specify a valid e-mail</div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-3" for="password">Password:</label>
                            <div class="col-sm-9">
                                <input type="password" class="form-control required" name="password" id="password" placeholder="Choose a password">
									              <div id="errorContact4" style="display: none; color: red;">Invalid: must specify a valid password</div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-3" for="password">Re-type Password:</label>
                            <div class="col-sm-9">
                                <input type="password" class="form-control required" name="password" id="password" placeholder="Re-type your password">
									              <div id="errorContact5" style="display: none; color: red;">Invalid: must re-type your password</div>
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="control-label col-sm-3" for="capta">Spell 'tcatnoc' backwards:</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control required" name="capta" id="capta" placeholder="What is 'tcatnoc' spelled backwards?">
									              <div id="errorContact4" style="display: none; color: red;">Invalid: wrong answer, try again</div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9">
                                <button type="button" class="btn btn-custom4" onClick="registercheck()">Submit</button>
                            </div>
                        </div>
                    </form>
            </div><!-- end column -->

    
    
