
	<section id="login_main">
		<div class="container">
		    <div class="row">
    		    <div id="formlogin" class="col-sm-6 col-sm-offset-2">
    		      <h2>Registration Form</h2>

		           <%= form_tag 'register' do  %>
                      <div class ="form-group">
                          <%= label_tag :firstname %>
                          <%= text_field_tag :firstname %>
                      </div>
                      <div class ="form-group">
                          <%= label_tag :lastname %>
                          <%= text_field_tag :lastname %>
                      </div>
                  <div class="form-group">
                      <%= label_tag :email, 'E-Mail Login:' %>
                      <%= text_field_tag :email %>
                  </div>
                  <div class="form-group">
                      <%= label_tag :password, 'Password:'  %>
                      <%= password_field_tag :password %>
                  </div>
                  <div class="form-group">
                      <%= label_tag :password_confirm  %>
                      <%= password_field_tag :password_confirmation %>
                  </div>
                      <%= submit_tag 'Login', { :class => 'btn-success' } %>
                  <% end %>
                </div>
            </div><!-- end row -->
        </div><!-- container -->
    </section>
    
