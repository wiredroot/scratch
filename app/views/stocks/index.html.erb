<h1>LIST OF STOCKS</h1>

<table>
  <tr>
    <th>Price</th>
    <th>Symbol</th>
    <th>Company Name</th>
  </tr>

  <% @stocks.each do |stock| %>
    <tr>
      <td><%= stock.price %></td>
      <td><%= stock.symbol %></td>
      <td><%= stock.company %></td>
      <td><%= link_to 'Show', stock_path(stock) %></td>
      <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
      <td><%= link_to 'Delete', stock_path(stock),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Stock Entry', new_stock_path %>